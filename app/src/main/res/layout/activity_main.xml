<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview_android"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/gm"/>
    <TextView
        android:id="@+id/textview_location"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Tap Button ini untuk memulai mendapatkan lokasi"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/imageview_android"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/button_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai Tracking Lokasi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textview_location"
        />

</RelativeLayout>